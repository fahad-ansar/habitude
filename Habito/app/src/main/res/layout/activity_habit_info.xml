<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".HabitFormActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="129dp"
        android:layout_height="104dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        android:src="@drawable/nil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/habitName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Skip Rope"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/desc"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/textview_border"
        android:gravity="center_vertical"
        android:hint="@string/description"
        android:padding="4dp"
        android:text="At a fast pace"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/habitName" />

    <LinearLayout
        android:id="@+id/habitOptions"
        android:layout_width="298dp"
        android:layout_height="141dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc">

        <TextView
            android:id="@+id/steps"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="8 glasses"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/reminder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="10:30 pm"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/streakValue"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="1.25"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:text="56"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/alltimeValue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/habitOptions" />

    <TextView
        android:id="@+id/streakText"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:gravity="center"
        android:text="STREAK"
        app:layout_constraintEnd_toEndOf="@+id/streakValue"
        app:layout_constraintEnd_toStartOf="@+id/alltimeText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/streakValue" />

    <TextView
        android:id="@+id/alltimeValue"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.25"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:text="100.00%"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/streakValue"
        app:layout_constraintEnd_toStartOf="@+id/compValue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/streakValue" />

    <TextView
        android:id="@+id/alltimeText"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:gravity="center"
        android:text="ALL TIME"
        app:layout_constraintBaseline_toBaselineOf="@+id/streakText"
        app:layout_constraintEnd_toEndOf="@+id/alltimeValue"
        app:layout_constraintEnd_toStartOf="@+id/compText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/streakText" />

    <TextView
        android:id="@+id/compValue"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.25"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:text="90"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/alltimeValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/alltimeValue" />

    <TextView
        android:id="@+id/compText"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:gravity="center"
        android:text="COMPLETIONS"
        app:layout_constraintBaseline_toBaselineOf="@+id/alltimeText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/alltimeText" />


</androidx.constraintlayout.widget.ConstraintLayout>