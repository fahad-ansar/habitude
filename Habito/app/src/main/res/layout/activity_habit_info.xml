<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".FormActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="129dp"
        android:layout_height="104dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        android:src="@drawable/nil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/habitName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Skip Rope"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/streakValue"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="172dp"
        android:layout_weight="1.25"
        android:ems="10"
        android:gravity="center"
        android:hint="56"
        android:inputType="number"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/alltimeValue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reminderLL"
        app:layout_constraintVertical_bias="0.056" />

    <TextView
        android:id="@+id/streakText"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:gravity="center"
        android:text="STREAK"
        app:layout_constraintEnd_toEndOf="@+id/streakValue"
        app:layout_constraintEnd_toStartOf="@+id/alltimeText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/streakValue" />

    <TextView
        android:id="@+id/alltimeValue"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.25"
        android:ems="10"
        android:gravity="center"
        android:hint="97.45"
        android:inputType="number"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/streakValue"
        app:layout_constraintEnd_toStartOf="@+id/compValue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/streakValue" />

    <TextView
        android:id="@+id/alltimeText"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:gravity="center"
        android:text="ALL TIME"
        app:layout_constraintBaseline_toBaselineOf="@+id/streakText"
        app:layout_constraintEnd_toEndOf="@+id/alltimeValue"
        app:layout_constraintEnd_toStartOf="@+id/compText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/streakText" />

    <TextView
        android:id="@+id/compValue"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.25"
        android:ems="10"
        android:gravity="center"
        android:hint="62"
        android:inputType="number"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/alltimeValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/alltimeValue" />

    <TextView
        android:id="@+id/compText"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:gravity="center"
        android:text="COMPLETIONS"
        app:layout_constraintBaseline_toBaselineOf="@+id/alltimeText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/alltimeText" />

    <TextView
        android:id="@+id/startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Started on"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/streakText"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/descLL"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <ImageView
            android:id="@+id/descIcon"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/description" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="@string/description"
            android:padding="4dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/stepsLL"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descLL">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/steps_circle" />

        <TextView
            android:id="@+id/steps"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="8 steps"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/reminderLL"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stepsLL">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/notifications" />

        <TextView
            android:id="@+id/reminder"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="10:30 pm"
            android:textSize="24sp"
            android:visibility="visible" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>