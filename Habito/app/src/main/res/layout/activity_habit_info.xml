<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".HabitFormActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="129dp"
        android:layout_height="104dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        android:src="@drawable/dumbbell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/habitName"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="Habit Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/desc"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="Description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/habitName">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/steps"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="Steps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/streakValue"
        android:layout_width="120dp"
        android:layout_height="21dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1.25"
        android:background="#E3F2FD"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:text="56"
        app:layout_constraintEnd_toStartOf="@+id/alltimeValue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/steps" />

    <TextView
        android:id="@+id/streakText"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:background="#FBE9E7"
        android:gravity="center"
        android:text="STREAK"
        app:layout_constraintEnd_toEndOf="@+id/streakValue"
        app:layout_constraintEnd_toStartOf="@+id/alltimeText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/streakValue" />

    <TextView
        android:id="@+id/alltimeValue"
        android:layout_width="120dp"
        android:layout_height="21dp"
        android:layout_weight="1.25"
        android:background="#E3F2FD"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:text="100.00%"
        app:layout_constraintBaseline_toBaselineOf="@+id/streakValue"
        app:layout_constraintEnd_toStartOf="@+id/compValue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/streakValue" />

    <TextView
        android:id="@+id/alltimeText"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:background="#FBE9E7"
        android:gravity="center"
        android:text="ALL TIME"
        app:layout_constraintBaseline_toBaselineOf="@+id/streakText"
        app:layout_constraintEnd_toEndOf="@+id/alltimeValue"
        app:layout_constraintEnd_toStartOf="@+id/compText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/streakText" />

    <TextView
        android:id="@+id/compValue"
        android:layout_width="120dp"
        android:layout_height="21dp"
        android:layout_weight="1.25"
        android:background="#E3F2FD"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:text="90"
        app:layout_constraintBaseline_toBaselineOf="@+id/alltimeValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/alltimeValue" />

    <TextView
        android:id="@+id/compText"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:background="#FBE9E7"
        android:gravity="center"
        android:text="COMPLETIONS"
        app:layout_constraintBaseline_toBaselineOf="@+id/alltimeText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/alltimeText" />


    <Button
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:text="edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/streakText"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="108dp"
        android:text="delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toEndOf="@+id/edit" />


</androidx.constraintlayout.widget.ConstraintLayout>