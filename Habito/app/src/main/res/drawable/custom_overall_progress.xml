<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="ring"
            android:thicknessRatio="25"
            android:useLevel="false">
            <solid android:color="#33D32F2F"/>
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270">
            <shape
                android:shape="ring"
                android:thicknessRatio="25"
                android:useLevel="true">
                <solid android:color="@color/primary_pink" />
            </shape>
        </rotate>
    </item>
</layer-list>

    <!--We keep both the fromDegree and toDegree same, since we don't want loading effect rather a
    stationary or determinate progression-->